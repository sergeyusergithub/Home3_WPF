<Application x:Class="Home3_WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Home3_WPF"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#5EBEC4"></Setter>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontFamily" Value="Cascadia Mono"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="BorderBrush" Value="#5EBEC4"/>
        </Style>

        <Style x:Key="HeaderStyle">
            <Setter Property="Control.FontSize" Value="26"/>
            <Setter Property="Control.Margin" Value="5"/>
            <Setter Property="Control.Foreground" Value="#5EBEC4"/>
            <Setter Property="Control.FontFamily" Value="Cascadia Mono"/>
            <Setter Property="Control.FontWeight" Value="Bold"/>
        </Style>
    </Application.Resources>
</Application>
